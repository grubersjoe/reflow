{
  "name": "babel-reflow",
  "version": "0.0.1",
  "description": "Babel plugin to transpile Flow typed JavaScript code to TypeScript",
  "author": "Jonathan Gruber <gruberjonathan@gmail.com>",
  "license": "MIT",
  "private": true,
  "bin": {
    "reflow": "./build/reflow.js"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/babel__core": "^7.1.2",
    "@types/jest": "^24.0.13",
    "@types/node": "^10",
    "@types/react": "^16.8.19",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-plugin-node": "^9.1.0",
    "flow-bin": "^0.101.0",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "react": "^16.8.6",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.4"
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0",
    "@babel/plugin-syntax-class-properties": "^7.2.0",
    "@babel/plugin-syntax-decorators": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7",
    "@babel/plugin-syntax-flow": "^7",
    "@babel/plugin-syntax-jsx": "^7",
    "@babel/types": "^7.4.4",
    "@types/babel__code-frame": "^7.0.1",
    "@types/diff": "^4.0.1",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.134",
    "@types/prettier": "^1.16.4",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "diff": "^4.0.1",
    "glob": "^7.1.4",
    "lodash": "^4.17.11",
    "prettier": "1.18.2",
    "prettier-reflow": "^1.18.2"
  },
  "scripts": {
    "build": "node --max_old_space_size=4096 ./node_modules/.bin/webpack --mode=production --progress",
    "clean": "rm -rv build/*",
    "dev": "webpack -w",
    "format": "prettier --write 'src/**/*' './*.{js,json,md}'",
    "lint": "eslint --max-warnings=0 'src/**/*.ts'",
    "test": "jest -i --silent",
    "test:ci": "yarn test --ci",
    "test:coverage": "yarn test --coverage && xdg-open .coverage/lcov-report/index.html",
    "typecheck": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --check 'src/**/*' './*.{js,json,md}' && yarn lint"
    }
  }
}
