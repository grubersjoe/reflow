{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": ["dom", "es2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "src/plugin/__tests__/__fixtures__/formatting/**/*.ts",
    "src/plugin/__tests__/__fixtures__/refactoring/replace-decorators/*.ts",
    "src/plugin/__tests__/__fixtures__/types/modules/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
